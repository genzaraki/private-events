<div class="container">

    <h1>Sign In</h1>
    <div>
    <%= form_for(:session, url: sign_in_path) do |f| %>  
        
        <div class="form-group">
            <%= f.label :username %>:
            <%= f.text_field :username, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.submit "Sign In", class: 'btn btn-primary btn-block' %>
        </div>
    <% end %>
    </div>
</div>