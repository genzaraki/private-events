<section class="hero is-info ">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Dahsboard
      </h1>
    </div>
  </div>
</section>
<section class="hero  is-white">
  <div class="hero-body">
    <div class="container">
        <div class="columns is-desktop">
            <div class="column ">
                <div class="columns">
                    <div class="column is-mobile">
                        <h2 class="title"> My Events <div class="tag"><%= current_user.events.count%></div> </h2>
                    </div>
                    <div class="column is-mobile has-text-right">
                        <%= link_to 'Create a new event', new_event_path,class: 'button is-primary ' %>
                    </div>
                </div>
                
                <div class="columns is-multiline event-list">
                    <% current_user.events.each do |event| %>
                    <div class="column is-12">
                        <div class="card event">
                        
                            <div class="card-content">
                                
                                <div class="content">
                                    <p class="title">
                                        <%= event.name %>
                                    </p>         
                                <div class="subtitle is-size-6">
                                    <strong><%= event.date.strftime("%Y/%m/%d") %> at <%= event.venue %></strong>
                                    
                                </div>
                                <div class="has-text-right">

                                        <%= link_to 'Read more', event_path( event),class: 'button is-link is-light is-small' %>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
            <div class="column is-4-desktop">
                <div class="card">
                        
                        <div class="card-content">
                
                        <div class="content">
                            <table class="table ">

                            <tr>
                                <td>User Name:</td>
                                <td> <%= @user.username %></td>
                            </tr>
                            <tr>
                                <td>Email:</td>
                                <td> <%= @user.email %></td>
                            </tr>
                            <tr>
                                <td>Created at:</td>
                                <td> <%= @user.created_at %></td>
                            </tr>

                        </table>
                        </div>
                        </div>

                    </div>
            </div>
        </div>
    </div>
   
  </div>
</section>
<div class="container">
    <div class="columns">
    <div class="column is-6-desktop">
        <section class="hero  is-light">
            <div class="hero-body">
                <div class="content">
                    <h2 class="title is-size-4"> Upcoming Events</h2>
                    <div class="columns event-list">
                    <% @upcoming.each do |event| %>
                        <div class="column is-12-desktop">
                            <div class="card event">
                        
                                <div class="card-content">
                                    
                                    <div class="content">
                                        <p class="title">
                                            <%= event.name %>
                                        </p>         
                                    <div class="subtitle is-size-6">
                                        <strong><%= event.date.strftime("%Y/%m/%d") %> at <%= event.venue %></strong>
                                    </div>
                                        <div class="has-text-right">

                                        <%= link_to 'Read more', event_path( event),class: 'button is-link is-light is-small' %>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    <% end %>

                    <% if @upcoming.count ==0%>
                        <div class="column">
                            <article class="message">
                                <div class="message-body">
                                    You Have no Upcoming Events to attend!
                                </div>
                            </article>
                        </div>
                    <%end%>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="column is-6-desktop">
        <section class="hero is-small">
            <div class="hero-body">
            <div class="content">
                <h2 class="title is-size-4"> Past Events</h2>
                <div class="columns event-list">
                <% @past.each do |event| %>
                    <div class="column is-12">
                        <div class="card event">
                        
                            <div class="card-content">
                            
                                <div class="content">
                                    <p class="title">
                                        <%= event.name %>
                                    </p>         
                                    <div class="subtitle is-size-6">
                                        <strong><%= event.date.strftime("%Y/%m/%d") %> at <%= event.venue %></strong>
                                    </div>
                                        <div class="has-text-right">

                                        <%= link_to 'Read more', event_path( event),class: 'button is-link is-light is-small' %>
                                        </div>
                                </div>
                            </div>

                        </div>
                    </div>
                <% end %>
                <% if @past.count ==0%>
                    <div class="column">
                        <article class="message is-warning">
                            <div class="message-body">
                                You Have no attended Events.
                            </div>
                        </article>
                    </div>
                <%end%>
                </div>
            </div>
            </div>
        </section>
    </div>
    </div>
</div>




